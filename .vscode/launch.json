{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Vite: Chrome Debug",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/packages/apps/logictutor",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack://_N_E/*": "${workspaceFolder}/*",
        "webpack:///*": "${workspaceFolder}/*",
        "vite:///*": "${workspaceFolder}/*"
      },
      "runtimeArgs": ["--remote-debugging-port=9222"]
    }
  ]
}
